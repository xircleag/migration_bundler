Pod::Spec.new do |s|
  s.name         = "<%= project.name %>"
  s.version      = "<%= migrations.latest_version %>"
  s.summary      =  "Packages the database schema and migrations for <%= project.name -%>"
  s.homepage     = "<%= project.config['homepage'] %>"
  s.author       =  { "<%= git_user_name -%>" => "<%= git_user_email -%>" }
  s.source       =  { :git => "<%= project.git_url -%>", :tag => s.version.to_s }
  s.license      =  'Commercial'

  s.resource_bundles = { 'MonkeyButler' => ['migrations/*', '<%= project.schema_path -%>'] }
end
